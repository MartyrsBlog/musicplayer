# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network requests when you run `pod install`.
# Uncomment the following line to disable this.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Flutter plugins
  pod 'audio_session', :path => '../.symlinks/plugins/audio_session/ios'
  pod 'file_picker', :path => '../.symlinks/plugins/file_picker/ios'
  pod 'just_audio', :path => '../.symlinks/plugins/just_audio/ios'
  pod 'just_audio_media_kit', :path => '../.symlinks/plugins/just_audio_media_kit/ios'
  pod 'path_provider', :path => '../.symlinks/plugins/path_provider/ios'
  pod 'permission_handler', :path => '../.symlinks/plugins/permission_handler/ios'
  pod 'shared_preferences', :path => '../.symlinks/plugins/shared_preferences/ios'
  pod 'metadata_god', :path => '../.symlinks/plugins/metadata_god/ios'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Fix for audio_session plugin
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'AUDIO_SESSION_MICROPHONE=1'
      ]
      
      # Fix for iOS deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end

# This file is generated by Flutter and should not be edited manually.
# Uncomment the following line to disable this warning.
# ENV['COCOAPODS_DISABLE_STATS'] = 'true'