# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network requests when you run `pod install`.
# Uncomment the following line to disable this.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Flutter will automatically add dependencies here
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Fix for audio_session plugin
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'AUDIO_SESSION_MICROPHONE=1'
      ]
      
      # Fix for iOS deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end

# This file is generated by Flutter and should not be edited manually.
# Uncomment the following line to disable this warning.
# ENV['COCOAPODS_DISABLE_STATS'] = 'true'